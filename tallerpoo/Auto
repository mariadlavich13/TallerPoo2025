import java.util.ArrayList;
import java.util.List;
public class Auto {
    private String modelo;
    private String motor;
    //Asociación con autoPiloto
    private List<AutoPiloto> autosPiloto;
    //Asociación bidireccional: cada auto pertenece (0...1) a una escuderia 
    private Escuderia escuderia;

    //constructores
    public Auto() {
        this.modelo="";
        this.motor="";
        this.autosPiloto = new ArrayList<>();
    }

    public Auto(String modelo, String motor, List<AutoPiloto> autosPiloto) {
        this.modelo=modelo;
        this.motor=motor;
        this.autosPiloto = autosPiloto;
    }
    //Gets y Sets
    public String getModelo() {
        return modelo;
    }

    public String getMotor() {
        return motor;
    }

    public void setModelo(String modelo) {
        this.modelo=modelo;
    }

    public void setMotor(String motor) {
        this.motor=motor;
    }
    //Auto-Piloto
    public List<AutoPiloto> getAutosPiloto() {
        return autosPiloto;
    }
    public void setAutosPiloto(List<AutoPiloto> autosPiloto) {
        this.autosPiloto = autosPiloto;
    }
    public void agregarAutoPiloto(AutoPiloto autoPiloto) {
        this.autosPiloto.add(autoPiloto);
    }
    //Escuderia
    public Escuderia getEscuderia (){ 
        return escuderia;
    }
    public void setEscuderia (Escuderia escuderia){
        this.escuderia = escuderia;
    }
    
}