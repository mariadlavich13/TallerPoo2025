package tallerpoo.logica;

import tallerpoo.Piloto;

/**
 * Clase para almacenar temporalmente
 * el puntaje total de un piloto.
 * Implementa Comparable para poder ordenar la lista de mayor a menor.
 */
public class PilotoPuntaje implements Comparable<PilotoPuntaje> {

    private Piloto piloto;
    private int puntajeTotal;

    public PilotoPuntaje(Piloto piloto, int puntajeTotal) {
        this.piloto = piloto;
        this.puntajeTotal = puntajeTotal;
    }

    public Piloto getPiloto() {
        return piloto;
    }

    public int getPuntajeTotal() {
        return puntajeTotal;
    }

    // Método para facilitar la impresión
    @Override
    public String toString() {
        return piloto.getNombre() + " " + piloto.getApellido() + ": " + puntajeTotal + " puntos";
    }

    /**
     * Compara dos pilotos por su puntaje.
     * Devuelve un número negativo si 'this' es mayor que 'otro' (orden descendente).
     */
    @Override
    public int compareTo(PilotoPuntaje otro) {
        // Orden descendente (el más alto primero)
        return Integer.compare(otro.puntajeTotal, this.puntajeTotal);
    }
}