import java.io.*;
import java.util.*;

public class GestorMecanico {
    public static List<Mecanico> leerMecanicosDesdeCSV(String path) {
        List<Mecanico> mecanicos = new ArrayList<>();

        try (BufferedReader br = new BufferedReader(new FileReader(path))) {
            String linea;
            br.readLine(); // Saltear encabezado

            while ((linea = br.readLine()) != null) {
                String[] valores = linea.split(",");

                Especialidad esp = Especialidad.valueOf(valores[0].trim());
                int aniosExperiencia = Integer.parseInt(valores[1].trim());
                Pais pais = Pais.valueOf(valores[2].trim());

                Mecanico m = new Mecanico(esp, aniosExperiencia, pais);
                mecanicos.add(m);
            }
        } catch (IOException e) {
            e.printStackTrace();
        }

        return mecanicos;
    }
}
